!-----------------------------------------------------------------------
&nam_diaharm   !   Harmonic analysis of tidal constituents ('key_diaharm')
!-----------------------------------------------------------------------
    nit000_han = 1         ! First time step used for harmonic analysis
    nitend_han = 29200       ! Last time step used for harmonic analysis
    nstep_han  = 20        ! Time step frequency for harmonic analysis
    tname(1)   = 'M2'      ! Name of tidal constituents
    tname(2)   = 'K1'
    tname(3)   = 'S2'
    tname(4)   = 'N2'
    tname(5)   = 'O1'
    tname(6)   = 'P1'
    tname(7)   = 'Q1'
    tname(8)   = 'K2'
/

