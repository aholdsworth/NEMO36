&nam_tide      !   tide parameters (#ifdef key_tide)
!-----------------------------------------------------------------------
   ln_tide_pot   = .false.   !  use tidal potential forcing
   ln_tide_ramp  = .false. !Peng .false.  ! #luo
   rdttideramp   =    1.    !
   clname(1)     =   'M2' !  name of constituent #luo
   clname(2)     =   'K1'
   clname(3)     =   'S2'
   clname(4)     =   'N2'
   clname(5)     =   'O1' !  name of constituent
   clname(6)     =   'P1'
   clname(7)     =   'Q1'
   clname(8)     =   'K2'

/
!-----------------------------------------------------------------------
&nambdy        !  unstructured open boundaries                          ("key_bdy")
!-----------------------------------------------------------------------
    nb_bdy         = 2                    !  number of open boundary sets
    ln_coords_file = .false.     !  =T : read bdy coordinates from file
    cn_coords_file = ''         !  bdy coordinates files
    ln_mask_file   = .false.       !  =T : read mask from file
    cn_mask_file   = ''            !  name of mask file (if ln_mask_file=.TRUE.)
    cn_dyn2d       = 'flather','flather'  !'flather'     !
    nn_dyn2d_dta   = 1,1                 !  = 0, bdy data are equal to the initial state
                                          !  = 1, bdy data are read in 'bdydata   .nc' files
                                          !  = 2, use tidal harmonic forcing data from files
                                          !  = 3, use external data AND tidal harmonic forcing
    cn_dyn3d      = 'zerograd', 'zerograd' !specifiedfrs','frs'               
    nn_dyn3d_dta  =  1,1                 !  = 0, bdy data are equal to the initial state
                                          !  = 1, bdy data are read in 'bdydata   .nc' files
    cn_tra        =  'specified', 'specified'!'frs','frs'!'specified'  !
    nn_tra_dta    =  1,1 !0,0                 ! = 0, bdy data are equal to the initial state
                                          !  = 1, bdy data are read in 'bdydata   .nc' files
    cn_ice_lim      = 'none','none'     !
    nn_ice_lim_dta  =  0,0               !  = 0, bdy data are equal to the initial state
                                          !  = 1, bdy data are read in 'bdydata   .nc' files
    rn_ice_tem      = 270.,270         !  lim3 only: arbitrary temperature of incoming sea ice
    rn_ice_sal      =  6.,6.       !  lim3 only:      --   salinity           --
    rn_ice_age      = 30.,30         !  lim3 only:      --   age                --

    ln_tra_dmp    =.false.,.false. !.true.,.true.         !  open boudaries conditions for tracers
    ln_dyn3d_dmp  =.false.,.false.  !.true., .true. !.false.,.false.          !  open boundary condition for baroclinic velocities
    rn_time_dmp   = 3.,3.               ! Damping time scale in days
    rn_time_dmp_out= 30.,30.           ! Outflow damping time scale
    nn_rimwidth   = 1,1                 !  width of the relaxation zone
    ln_vol        = .false.       !  total volume correction (see nn_volctl parameter)
    nn_volctl     =1                    !  = 0, the total water flux across open boundaries is zero
/
!-----------------------------------------------------------------------
&nambdy_index    !  open boundaries - definition ("key_bdy")
!-----------------------------------------------------------------------
    ctypebdy ='W'
    nbdyind  = -1! i-index for segment
    nbdybeg  =2    ! j-index for segment beginning
    nbdyend  =399 ! j-index for segment end
/
!!-----------------------------------------------------------------------
&nambdy_dta      !  open boundaries - external data           ("key_bdy")
!-----------------------------------------------------------------------
!              !  file name      ! frequency (hours) ! variable   ! time interp.   !  clim   ! 'yearly'/ ! weights  ! rotation ! land/sea mask !
!              !                 !  (if <0  months)  !   name     !   (logical)    !  (T/F ) ! 'monthly' ! filename ! pairing  ! filename      !
   bn_ssh =     'bdy_WEST' ,         -1        , 'sossheig' ,     .true.     , .false. ,  'yearly'  ,    ''    ,   ''     , ''
   bn_u3d  =    'bdy_WEST' ,         -1        , 'vozocrtx' ,     .true.     , .false. ,  'yearly'  ,    ''    ,   ''     , ''
   bn_v3d  =    'bdy_WEST' ,         -1        , 'vomecrty' ,     .true.     , .false. ,  'yearly'  ,    ''    ,   ''     , ''
   bn_tem  =    'bdy_WEST' ,         -1        , 'votemper' ,     .true.     , .false. ,  'yearly'  ,    ''    ,   ''     , ''
   bn_sal  =    'bdy_WEST' ,         -1        , 'vosaline' ,     .true.     , .false. ,  'yearly'  ,    ''    ,   ''     , ''
   cn_dir  =    'OBCDATA/'
   ln_full_vel = .true.
/
!-----------------------------------------------------------------------
&nambdy_index    !  open boundaries - definition ("key_bdy")
!-----------------------------------------------------------------------
    ctypebdy ='E'
    nbdyind  = -1! i-index for segment
    nbdybeg  = 2    ! j-index for segment beginning
    nbdyend  =399 ! j-index for segment end
/
